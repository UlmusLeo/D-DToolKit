<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.ulmus.ddtoolkit.Inventory">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Inventory"
        android:id="@+id/inventory_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView3"
        android:layout_below="@+id/inventory_label"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="load: light"
        android:id="@+id/inventory_current_load_catagory"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/inventory_label"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="34lb / 66lb"
        android:id="@+id/inventory_current_threshold"
        android:layout_above="@+id/listView3"
        android:layout_toEndOf="@+id/inventory_current_load_catagory"
        android:layout_marginStart="42dp" />
</RelativeLayout>
